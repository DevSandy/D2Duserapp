<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:layout_marginBottom="50dp"
    tools:context=".ui.profile.profile">
<LinearLayout

    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:padding="15dp"
        app:cardCornerRadius="10dp"
        android:id="@+id/edprof"
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:layout_margin="8dp"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal|center_vertical"
        android:layout_height="wrap_content">
        <LinearLayout
            android:background="@drawable/grad_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
        <androidx.cardview.widget.CardView
            android:layout_width="100dp"
            android:layout_margin="8dp"
            android:id="@+id/profed"
            android:layout_height="100dp"
            app:cardCornerRadius="50dp">
            <ImageView
                android:id="@+id/prof_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="center"
                android:src="@drawable/personpic"></ImageView>
        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:layout_margin="8dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:id="@+id/edprofile"
            android:gravity="center_vertical"
            android:orientation="vertical">
        <TextView
            android:id="@+id/prof_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="name"
            android:textColor="@color/white"
            android:textSize="20dp"
            ></TextView>
        <TextView
            android:id="@+id/prof_contact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="contact"
            android:textColor="@color/white"
            android:textSize="20dp"></TextView>

            <TextView
                android:id="@+id/prof_mail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textColor="@color/white"
                android:text="email"></TextView>

        </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

   <androidx.cardview.widget.CardView
       android:layout_width="match_parent"
       android:layout_margin="8dp"
       android:foreground="?android:attr/selectableItemBackground"
       android:clickable="true"
       android:layout_height="70dp"
       app:cardCornerRadius="10dp">
       <LinearLayout
           android:background="@drawable/grad_bg"
           android:orientation="horizontal"
           android:layout_width="match_parent"
           android:layout_height="match_parent">

           <TextView
               android:layout_width="300dp"
               android:layout_height="54dp"
               android:layout_gravity="center_vertical"
               android:layout_margin="8dp"
               android:fontFamily="sans-serif"
               android:gravity="center_vertical"
               android:text="Saved Cards"
               android:textColor="@color/white"
               android:textSize="20dp"></TextView>
           <ImageView
               android:src="@drawable/fwd2"
               android:layout_gravity="center_vertical"
               android:layout_width="40dp"
               android:layout_height="40dp"></ImageView>
       </LinearLayout>
   </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_margin="8dp"
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:layout_height="70dp"
        app:cardCornerRadius="10dp">
        <LinearLayout
            android:background="@drawable/grad_bg"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="300dp"
                android:layout_height="match_parent"
                android:text="Saved Location"
                android:textSize="20dp"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:layout_margin="8dp"
                android:textColor="@color/white"
                android:fontFamily="sans-serif"></TextView>
            <ImageView
                android:src="@drawable/fwd2"
                android:layout_gravity="center_vertical"
                android:layout_width="40dp"
                android:layout_height="40dp"></ImageView>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_margin="8dp"
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:id="@+id/edcon"
        android:layout_height="70dp"
        app:cardCornerRadius="10dp">
        <LinearLayout
            android:background="@drawable/grad_bg"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="300dp"
                android:layout_height="match_parent"
                android:text="Contact Us"
                android:textSize="20dp"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:layout_margin="8dp"
                android:textColor="@color/white"
                android:fontFamily="sans-serif"></TextView>
            <ImageView
                android:src="@drawable/fwd2"
                android:layout_gravity="center_vertical"
                android:layout_width="40dp"
                android:layout_height="40dp"></ImageView>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_margin="8dp"
        android:id="@+id/edpol"
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:layout_height="70dp"
        app:cardCornerRadius="10dp">
        <LinearLayout
            android:background="@drawable/grad_bg"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="300dp"
                android:layout_height="match_parent"
                android:text="Privacy Policy"
                android:textSize="20dp"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:layout_margin="8dp"
                android:textColor="@color/white"
                android:fontFamily="sans-serif"></TextView>
            <ImageView
                android:src="@drawable/fwd2"
                android:layout_gravity="center_vertical"
                android:layout_width="40dp"
                android:layout_height="40dp"></ImageView>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_margin="8dp"
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:id="@+id/edabt"
        android:layout_height="70dp"
        app:cardCornerRadius="10dp">
        <LinearLayout
            android:background="@drawable/grad_bg"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="300dp"
                android:layout_height="match_parent"
                android:text="About Us"
                android:textSize="20dp"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:layout_margin="8dp"
                android:textColor="@color/white"
                android:fontFamily="sans-serif"></TextView>
            <ImageView
                android:src="@drawable/fwd2"
                android:layout_gravity="center_vertical"
                android:layout_width="40dp"
                android:layout_height="40dp"></ImageView>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/btn_bg"
        android:layout_gravity="center"
        android:fontFamily="sans-serif-medium"
        android:paddingLeft="70dp"
        android:paddingRight="70dp"
        android:id="@+id/buttonContinue"
        android:text="Logout"
        android:layout_marginBottom="10dp"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="16sp" />
</LinearLayout>

</ScrollView>
