<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".car_service">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="@drawable/grad_bg">
                <TextView
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="sans-serif"
                    android:text="Select your Car Service"
                    android:textColor="#ffffff"
                    android:textSize="35dp"></TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="8dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <androidx.cardview.widget.CardView
                    android:id="@+id/card1"
                    android:layout_width="110dp"
                    android:clickable="true"
                    android:layout_margin="2dp"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:layout_height="110dp">

                    <LinearLayout
                        android:layout_gravity="center"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="70dp"
                            android:layout_height="60dp"
                            android:src="@drawable/car_wash"></ImageView>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:textSize="10dp"
                            android:textColor="#000000"
                            android:layout_height="wrap_content"
                            android:text="Car Wash \n"></TextView>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/card2"
                    android:layout_width="110dp"
                    android:clickable="true"
                    android:layout_margin="2dp"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:layout_height="110dp">

                    <LinearLayout
                        android:layout_gravity="center"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="70dp"
                            android:layout_height="60dp"
                            android:src="@drawable/car_repair"></ImageView>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:textSize="10dp"
                            android:textColor="#000000"
                            android:layout_height="wrap_content"
                            android:text="Car Repair\n"></TextView>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:id="@+id/card3"
                    android:layout_width="110dp"
                    android:clickable="true"
                    android:layout_margin="2dp"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:layout_height="110dp">

                    <LinearLayout
                        android:layout_gravity="center"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="70dp"
                            android:layout_height="60dp"
                            android:src="@drawable/painting"></ImageView>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:textSize="10dp"
                            android:textColor="#000000"
                            android:layout_height="wrap_content"
                            android:text="Car Painting\n"></TextView>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>


            </LinearLayout>
            <LinearLayout
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <androidx.cardview.widget.CardView
                    android:id="@+id/card4"
                    android:layout_width="110dp"
                    android:clickable="true"
                    android:layout_margin="2dp"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:layout_height="110dp">

                    <LinearLayout
                        android:layout_gravity="center"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="70dp"
                            android:layout_height="60dp"
                            android:src="@drawable/tire"></ImageView>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:textSize="10dp"
                            android:textColor="#000000"
                            android:layout_height="wrap_content"
                            android:text="Wheel Alignment\n"></TextView>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:id="@+id/card5"
                    android:layout_width="110dp"
                    android:clickable="true"
                    android:layout_margin="2dp"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:layout_height="110dp">

                    <LinearLayout
                        android:layout_gravity="center"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="70dp"
                            android:layout_height="60dp"
                            android:src="@drawable/ac"></ImageView>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:textSize="10dp"
                            android:textColor="#000000"
                            android:layout_height="wrap_content"
                            android:text="Car Air conditioning \n"></TextView>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:id="@+id/card6"
                    android:layout_width="110dp"
                    android:clickable="true"
                    android:layout_margin="2dp"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:layout_height="110dp">

                    <LinearLayout
                        android:layout_gravity="center"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="70dp"
                            android:layout_height="60dp"
                            android:src="@drawable/polish"></ImageView>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:textSize="10dp"
                            android:textColor="#000000"
                            android:layout_height="wrap_content"
                            android:text="Car polish\n"></TextView>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>
            <LinearLayout
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <androidx.cardview.widget.CardView
                    android:id="@+id/card7"
                    android:layout_width="110dp"
                    android:clickable="true"
                    android:layout_margin="2dp"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:layout_height="110dp">

                    <LinearLayout
                        android:layout_gravity="center"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="70dp"
                            android:layout_height="60dp"
                            android:src="@drawable/tools"></ImageView>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:textSize="10dp"
                            android:textColor="#000000"
                            android:layout_height="wrap_content"
                            android:text="Tinkering \n"></TextView>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:id="@+id/card8"
                    android:layout_width="110dp"
                    android:clickable="true"
                    android:layout_margin="2dp"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:layout_height="110dp">

                    <LinearLayout
                        android:layout_gravity="center"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="70dp"
                            android:layout_height="60dp"
                            android:src="@drawable/maintenance"></ImageView>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="39dp"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text=" Maintenance\n"
                            android:textColor="#000000"
                            android:textSize="10dp"></TextView>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/card9"
                    android:layout_width="110dp"
                    android:clickable="true"
                    android:layout_margin="2dp"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:layout_height="110dp">

                    <LinearLayout
                        android:layout_gravity="center"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="70dp"
                            android:layout_height="60dp"
                            android:src="@drawable/others"></ImageView>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:textSize="10dp"
                            android:textColor="#000000"
                            android:layout_height="wrap_content"
                            android:text="Other Services \n"></TextView>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>



        </LinearLayout>
    </ScrollView>
</LinearLayout>