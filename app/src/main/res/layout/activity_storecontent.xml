<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Storecontent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:layout_gravity="center"
    android:gravity="center"
    android:background="@drawable/grad_bg">
    <TextView
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fontFamily="sans-serif"
        android:text="Select your product catogery"
        android:textColor="#ffffff"
        android:textSize="35dp"></TextView>
</LinearLayout>

    <LinearLayout
        android:layout_marginTop="8dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <androidx.cardview.widget.CardView
            android:id="@+id/provisions"
            android:layout_width="110dp"
            android:clickable="true"
            android:layout_margin="2dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:layout_height="110dp">

            <LinearLayout
                android:layout_gravity="center"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="60dp"
                    android:src="@drawable/shopping_basket"></ImageView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textSize="10dp"
                    android:textColor="#000000"
                    android:layout_height="wrap_content"
                    android:text="Food provisions\n"></TextView>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/eggs"
            android:layout_width="110dp"
            android:clickable="true"
            android:layout_margin="2dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:layout_height="110dp">

            <LinearLayout
                android:layout_gravity="center"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="60dp"
                    android:src="@drawable/food"></ImageView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textSize="10dp"
                    android:textColor="#000000"
                    android:layout_height="wrap_content"
                    android:text="Dairy and Egg\n"></TextView>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/breakfast"
            android:layout_width="110dp"
            android:clickable="true"
            android:layout_margin="2dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:layout_height="110dp">

            <LinearLayout
                android:layout_gravity="center"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="60dp"
                    android:src="@drawable/burger"></ImageView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textSize="10dp"
                    android:textColor="#000000"
                    android:layout_height="wrap_content"
                    android:text="Breakfast\n"></TextView>
            </LinearLayout>
        </androidx.cardview.widget.CardView>


    </LinearLayout>
    <LinearLayout
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <androidx.cardview.widget.CardView
            android:id="@+id/instantfood"
            android:layout_width="110dp"
            android:clickable="true"
            android:layout_margin="2dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:layout_height="110dp">

            <LinearLayout
                android:layout_gravity="center"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="60dp"
                    android:src="@drawable/bar_counter"></ImageView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textSize="10dp"
                    android:textColor="#000000"
                    android:layout_height="wrap_content"
                    android:text="Instant Foods\n"></TextView>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/chocolate"
            android:layout_width="110dp"
            android:clickable="true"
            android:layout_margin="2dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:layout_height="110dp">

            <LinearLayout
                android:layout_gravity="center"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="60dp"
                    android:src="@drawable/snack"></ImageView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textSize="10dp"
                    android:textColor="#000000"
                    android:layout_height="wrap_content"
                    android:text="Chocolates and Treats\n"></TextView>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/beverage"
            android:layout_width="110dp"
            android:clickable="true"
            android:layout_margin="2dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:layout_height="110dp">

            <LinearLayout
                android:layout_gravity="center"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="60dp"
                    android:src="@drawable/drink"></ImageView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textSize="10dp"
                    android:textColor="#000000"
                    android:layout_height="wrap_content"
                    android:text="Beverages and Water Bottles\n"></TextView>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
    <LinearLayout
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <androidx.cardview.widget.CardView
            android:id="@+id/snacks"
            android:layout_width="110dp"
            android:clickable="true"
            android:layout_margin="2dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:layout_height="110dp">

            <LinearLayout
                android:layout_gravity="center"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:src="@drawable/breakfast"></ImageView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textSize="10dp"
                    android:textColor="#000000"
                    android:layout_height="wrap_content"
                    android:text="Snacks \n"></TextView>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/care"
            android:layout_width="110dp"
            android:clickable="true"
            android:layout_margin="2dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:layout_height="110dp">

            <LinearLayout
                android:layout_gravity="center"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="60dp"
                    android:src="@drawable/cosmetics"></ImageView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="39dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="Personal Care\n"
                    android:textColor="#000000"
                    android:textSize="10dp"></TextView>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/coldstore"
            android:layout_width="110dp"
            android:clickable="true"
            android:layout_margin="2dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:layout_height="110dp">

            <LinearLayout
                android:layout_gravity="center"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="60dp"
                    android:src="@drawable/cold_storage"></ImageView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textSize="10dp"
                    android:textColor="#000000"
                    android:layout_height="wrap_content"
                    android:text=" Cold Storage\n"></TextView>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
            </LinearLayout>
    <LinearLayout
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <androidx.cardview.widget.CardView
            android:id="@+id/cleaning"
            android:layout_width="110dp"
            android:clickable="true"
            android:layout_margin="2dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:layout_height="110dp">

            <LinearLayout
                android:layout_gravity="center"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="60dp"
                    android:src="@drawable/household"></ImageView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textSize="10dp"
                    android:textColor="#000000"
                    android:layout_height="wrap_content"
                    android:text=" Household and Cleaning \n"></TextView>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/condiments"
            android:layout_width="110dp"
            android:clickable="true"
            android:layout_margin="2dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:layout_height="110dp">

            <LinearLayout
                android:layout_gravity="center"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="60dp"
                    android:src="@drawable/cold_storage"></ImageView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textSize="10dp"
                    android:textColor="#000000"
                    android:layout_height="wrap_content"
                    android:text=" Condiments"></TextView>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/bestseller"
            android:layout_width="110dp"
            android:clickable="true"
            android:layout_margin="2dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:layout_height="110dp">

            <LinearLayout
                android:layout_gravity="center"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="60dp"
                    android:src="@drawable/seller"></ImageView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textSize="10dp"
                    android:textColor="#000000"
                    android:layout_height="wrap_content"
                    android:text=" Best seller\n"></TextView>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
            </LinearLayout>
    </LinearLayout>
    </ScrollView>
</LinearLayout>